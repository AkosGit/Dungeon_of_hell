<Window x:Class="Dungeon_of_hell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Dungeon_of_hell"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="KeyDown">
            <i:CallMethodAction MethodName="KeyDown" TargetObject="{Binding}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <ContentControl Content="{Binding PrimaryViewModel,UpdateSourceTrigger=PropertyChanged}" Name="Primary"/>
        <ContentControl Content="{Binding SecondaryViewModel,UpdateSourceTrigger=PropertyChanged}" /> 
    </Grid>

</Window>
