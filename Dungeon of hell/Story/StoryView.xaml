<UserControl x:Class="Dungeon_of_hell.Story.StoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dungeon_of_hell.SinglePlayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="Content"
             Background="Black"
             >
    <Viewbox>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="{Binding StoryText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TextAlignment="Left" Foreground="White" FontSize="12" Margin="30,0,0,0" Width="350" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.159"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.416"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>
    </Viewbox>
</UserControl>
